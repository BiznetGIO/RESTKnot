# This is a sample of a minimal configuration file for Knot DNS.
# See knot.conf(5) or refer to the server documentation.

server:
    rundir: "/run/knot"
    user: knot:knot
    listen: "0.0.0.0@53"

log:
  - target: syslog
    any: info

remote:
 - id: slave1
   address: <slaveip>@53

 - id: slave2
   address: <slaveip>@53

acl:
 - id: slave1
   address: <slaveip>
   action: transfer

 - id: slave2
   address: <slaveip>
   action: transfer

template:
  - id: default
    storage: "/var/lib/knot"
    file: "%s.zone"

mod-stats:
  - id: "default"
    edns-presence: "on"
    query-type: "on"

zone:
